<div class="row">
	<section class="main col-md-12">
		<article>
			<h2>Wai Chi Ng - the developer</h2>
			<p>Student developer with a demonstrated history of working as an assistant and secretary in the health industry. Skilled
				in C, C++, JavaScript, HTML, CSS, SQL, Research, Event Planning, and Customer Service. Strong IT and administrative professional
				with a Bachelor's Degree from University of Waterloo and an advanced CPA Diploma from Seneca in progress. </p>
		</article>
	</section>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Leave a Comment</h3>
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					<form method="POST" action="/about/addComment">
						<fieldset>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name" />
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email" />
									</div>
								</div>
							</div>
					
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="subject" name="subject" type="text" placeholder="Subject" />
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<textarea class="form-control" id="commentText" name="commentText" placeholder="Comment" rows="5"></textarea>
									</div>
								</div>
							</div>
						</fieldset>
						<input type="submit" class="btn btn-primary pull-right" value="Comment" />
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

{{#if data}}
<div class="row">
	<div class="col-md-12">
		<h3>All Comments</h3>
		<hr />
	</div>
</div>
{{/if}} 

{{#each data}}
<div class="row">
	<div class="col-md-12">
		<div class="commentSubject">
			{{subject}}
		</div>
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					{{commentText}}
					<br />
					<br />
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					Posted on: {{postedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>
				</div>
			</div>

			{{#each replies}}
			<div class="row">
				<div class="col-md-12">
					<br />
					<div class="well">
						<div class="row">
							<div class="col-md-12">
								{{commentText}}
								<br />
								<br />
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								Posted on: {{repliedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}}

			<div class="row">
				<div class="col-md-12">
					<button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-{{_id}}" aria-expanded="false">Reply</button>
				</div>
			</div>
		</div>
		<div class="collapse" id="reply-{{_id}}">
			<div class="well">
				<div class="row">
					<div class="col-md-12">
						<form method="POST" action="/about/addReply">
						<input type="hidden" name="comment_id" value="{{this._id}}" />
						<fieldset>
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name" />
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email" />
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<textarea class="form-control" id="commentText" name="commentText" placeholder="Comment" rows="5"></textarea>
									</div>
								</div>
							</div>
						</fieldset>
						<input type="submit" class="btn btn-primary pull-right" value="Reply" />
					</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{/each}}